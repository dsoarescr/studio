
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Regra para a coleção 'users'
    // Permite que um utilizador leia e escreva apenas no seu próprio documento.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Regra para a coleção 'pixels' (Exemplo)
    // Permite que qualquer utilizador autenticado leia, mas apenas o dono do pixel (ownerId) escreva.
    match /pixels/{pixelId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && resource.data.ownerId == request.auth.uid;
    }

    // Regra para a coleção 'paymentIntents'
    // Permite que apenas utilizadores autenticados criem e leiam os seus próprios intentos de pagamento.
    match /paymentIntents/{intentId} {
      allow read, create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Regra para a coleção 'subscriptions'
    // Permite que apenas utilizadores autenticados leiam e atualizem a sua própria subscrição.
    match /subscriptions/{subscriptionId} {
      allow read, update: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // Regra para a coleção de transações de um utilizador
    match /users/{userId}/transactions/{transactionId} {
      allow read, list, create: if request.auth != null && request.auth.uid == userId;
    }
  }
}
